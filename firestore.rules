rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;  // Any authenticated user can read
      allow write: if request.auth != null && request.auth.uid == userId;  // Only user can modify their own data
    }
    
    // Success stories collection
    match /success-stories/{storyId} {
      allow read: if true;  // Anyone can read success stories
      allow create, update, delete: if request.auth != null && 
        (request.auth.token.admin == true || request.auth.token.moderator == true);  // Only admins/moderators can modify
    }
    
    // Calls collection
    match /calls/{callId} {
      // Allow participants to read the call document
      allow read: if request.auth != null;
      
      // Allow creation if user is authenticated and is the caller
      allow create: if request.auth != null;
      
      // Allow updates by call participants
      allow update: if request.auth != null && (
        resource.data.callerId == request.auth.uid || 
        resource.data.recipientId == request.auth.uid
      );
      
      // Allow deletion by call participants
      allow delete: if request.auth != null && (
        resource.data.callerId == request.auth.uid || 
        resource.data.recipientId == request.auth.uid
      );
      
      // ICE candidates and other call-related subcollections
      match /{document=**} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/calls/$(callId)).data.callerId == request.auth.uid ||
          get(/databases/$(database)/documents/calls/$(callId)).data.recipientId == request.auth.uid
        );
      }
    }
    
    // Partner preferences remain private to each user
    match /partnerPreferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /databases/{database}/documents {
    match /religions/{religionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
  }
}